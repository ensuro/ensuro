{
  "extends": ["solhint:recommended"],
  "rules": {
    "prettier/prettier": "warn",
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "compiler-version": ["error","^0.8.0"],
    "reason-string": ["warn",{"maxLength":80}],
    "func-visibility": ["warn",{"ignoreConstructors":false}],
    "max-states-count": "off"
  },
  "plugins": ["prettier"]
}
